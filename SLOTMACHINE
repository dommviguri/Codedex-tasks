
import random
symbols = ['🍒',' 🍇', '🍉', ' 7️⃣ ']

def play():
  while True:
    results = random.choices(symbols, k=3)
    print('')
    print(f'{results[0]} | {results[1]} | {results[2]}')
    print('')

    win = results[0] == ' 7️⃣ ' and results[1] == ' 7️⃣ ' and results [2] == ' 7️⃣ '
    if win:
        print ('Jackpot! 💰')
        break
    else:
      answer = input('Keep playing? (Y/N)  ').strip().upper()
      if answer == 'N':
        print('Thanks for playing.')
      elif answer != 'Y':
        print('Respuesta no válida. Terminando el juego.')
        break

play()
